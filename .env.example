# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/gopilgrims

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@gopilgrims.com

# PostgreSQL Direct Connection (for local development)
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=gopilgrims

# Session Secret (generate a secure random string)
SESSION_SECRET=your_super_secret_session_key_here

# Replit Environment Variables (automatically provided in Replit)
REPLIT_DOMAINS=your_repl_domain.replit.app
REPL_ID=your_repl_id